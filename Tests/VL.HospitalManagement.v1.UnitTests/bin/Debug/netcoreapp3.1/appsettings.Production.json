{
  //#if (ForwardedHeaders && HostFiltering)
  "ForwardedHeaders": {
    "AllowedHosts": [
      "example.com"
    ]
  },
  //#elif (HostFiltering)
  "HostFiltering": {
    "AllowedHosts": [
      "example.com"
    ]
  },
  //#endif
  "Kestrel": {
    "Endpoints": {
      //#if (HttpsEverywhere)
      "Https": {
        "Url": "https://*:443",
        "Certificate": {
          // TODO
        }
      },
      //#endif
      "Http": {
        "Url": "http://*:80"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      //#if (ApplicationInsights)
      {
        "Name": "ApplicationInsightsTraces",
        // The instrumentation key for Application Insights retrieved from Azure e.g. 11111111-2222-3333-4444-555555555555
        "InstrumentationKey": "APPLICATION-INSIGHTS-INSTRUMENTATION-KEY",
        "RestrictedToMinimumLevel": "Warning"
      },
      //#endif
    ]
  }
}
